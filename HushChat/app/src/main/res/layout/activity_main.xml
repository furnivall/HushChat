<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/header_label"
        android:layout_width="167dp"
        android:layout_height="55dp"
        android:text="@string/hushchat"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/text_input_username"
        android:layout_width="336dp"
        android:layout_height="54dp"
        android:layout_marginTop="36dp"
        android:gravity="center_horizontal"
        android:hint="@string/your_text_here"
        app:layout_constraintTop_toBottomOf="@+id/username_button"
        tools:layout_editor_absoluteX="37dp" />

    <Button
        android:id="@+id/username_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="36dp"
        android:text="@string/set_username"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_label" />

    <TextView
        android:id="@+id/text_reader"
        android:layout_width="386dp"
        android:layout_height="374dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:background="#F39494"
        android:scrollbars="vertical"
        android:text=""
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_label" />


    <Button
        android:id="@+id/send_message_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_message"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/text_reader"
        tools:layout_editor_absoluteX="301dp"
        tools:layout_editor_absoluteY="352dp" />

</androidx.constraintlayout.widget.ConstraintLayout>