<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/header_label"
        android:layout_width="167dp"
        android:layout_height="55dp"
        android:text="@string/hushchat"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginStart="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/text_input_username"
        android:layout_width="336dp"
        android:layout_height="54dp"
        android:layout_marginTop="36dp"
        android:layout_marginStart="30dp"
        android:gravity="center_horizontal"
        android:hint="@string/your_text_here"
        app:layout_constraintTop_toBottomOf="@+id/username_button"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="37dp" />

    <Button
        android:id="@+id/username_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="36dp"
        android:text="@string/set_username"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_label" />



</androidx.constraintlayout.widget.ConstraintLayout>